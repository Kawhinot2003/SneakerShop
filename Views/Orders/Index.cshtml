@using SneakerShop.Models.PageModels
@model OrdersPageModel
@{
    var isAuth = User?.Identity?.Name != null;
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="flex flex-col gap-[78px]">
        <div class="flex flex-col gap-[132px] mx-auto">
            <div class="flex justify-center text-[70px] pt-[100px] leading-none">Заказы</div>
            @if (Model.Goods.Any())
            {
                <div class="flex gap-[166px] mt-[100px]">
                    <div class="max-w-[600px] max-h-[260px] overflow-h">
                        <img class="w-full h-full" src="~/images/blazer-mid.jpg" alt="">
                    </div>
                    <div class="flex flex-col gap-[55px]">
                        <div class="text-[30px] leading-none text-center">Название: @Model._Order.Id</div>
                        <div>
                            @foreach (var e in Model.Goods)
                            {
                                <div class="text-[30px] leading-none text-center">Размер: @e.IdSize</div>
                            }
                        </div>
                        <div class="text-[30px] leading-none text-center">
                            Статус: @Model._Order.Status
                        </div>
                    </div>
                </div>
            }
            else
            {
                if (isAuth)
                {
                    <div class="flex flex-col gap-2.5 mt-[132px]">
                        <div class="max-w-[200px]">
                            <img class="w-full" src="~/images/icons/emptyOrder.svg">
                        </div>
                        <div class="text-[30px] leading-none text-center text-[rgba(0,0,0,0.4)]">У вас нет актуальных заказов</div>
                    </div>
                }
                else
                {
                    <p class="text-[30px] leading-none text-center">Войдите в аккаунт для создания заказа.</p>
                }
            }
        </div>
    </div>
</body>
</html>