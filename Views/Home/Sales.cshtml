@using SneakerShop.Models.Entities;
@using SneakerShop.Models.PageModels
@model IndexPageModel
@{
    var goods = Model.Goods;
}

<!DOCTYPE html>
<html lang="en">
<body class="pb-[50px]">
    <div class="text-[60px] leading-none text-center mt-[78px]">Скидки</div>
    <div class="mt-[174px] flex flex-col gap-[248px] max-w-[1500px] mx-auto text-[40px]">
        <div class="flex gap-[560px]">
            <div class="flex flex-col justify-center items-center">
                @foreach (Good g in goods)
                {
                    <div><a href="/GoodInfo/Index/?goodId=@g.Id"><img src="@g.ImageURL" alt=""></a></div>
                    <div>@g.Name</div>
                }
            </div>
        </div>
    </div>
</body>
</html>