@using SneakerShop.Models.Entities;
@model SneakerShop.Models.PageModels.AdminIndexPageModel

<div>
    <h3>Список типов заказов</h3>
    <table>
        <tr>
            <td><p>Название</p></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var e in Model.OrderTypes)
        {
            <tr>
                <td><p>@e.Name</p></td>
                <td><p><a href="/Admin/Home/EditOrderType/@e.Id">Изменить</a></p></td>
                <td><p><a href="/Admin/Home/DeleteOrderType/@e.Id">Удалить</a></p></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Admin/Home/AddOrderType">Добавить</a>
</div>