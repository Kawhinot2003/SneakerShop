@using SneakerShop.Models.Entities;
@model SneakerShop.Models.PageModels.AdminIndexPageModel

<div>
    <h3>Список типов скидок</h3>
    <table>
        <tr>
            <td><p>Название</p></td>
            <td><p>Процент</p></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var e in Model.DiscountTypes)
        {
            <tr>
                <td><p>@e.Name</p></td>
                <td><p>@e.Percent</p></td>
                <td><p><a href="/Admin/Home/EditDiscountType/@e.Id">Изменить</a></p></td>
                <td><p><a href="/Admin/Home/DeleteDiscountType/@e.Id">Удалить</a></p></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Admin/Home/AddDiscountType">Добавить</a>
</div>