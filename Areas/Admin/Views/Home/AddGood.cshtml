@model SneakerShop.Models.Entities.Good
@using SneakerShop.Services
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.IdGoodCategory, "Код категории")
            <br />
            @Html.DropDownListFor()
        </p>
        <p>
            @Html.LabelFor(m => m.IdManufacturer, "Код производителя")
            <br />
            @Html.EditorFor(m => m.IdManufacturer)
        </p>
        <p>
            @Html.LabelFor(m => m.Description, "Описание")
            <br />
            @Html.EditorFor(m => m.Description)
        </p>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}